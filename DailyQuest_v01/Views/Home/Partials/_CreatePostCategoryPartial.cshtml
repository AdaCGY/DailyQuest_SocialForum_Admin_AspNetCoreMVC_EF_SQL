@model DailyQuest_v01.Models.PostCategory

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h2 class="pb-2">新增類別</h2>
            <div class="ms-auto text-end">
            </div>
        </div>
    </div>
</div>

<div class="card">
    <form id="createPostCategoryForm">
        @Html.AntiForgeryToken()
        <div class="card-body">
            <h4 class="card-title">文章類別</h4>
            <div class="form-group row">
                <label for="lname" class="col-sm-3 text-end control-label col-form-label">類別名稱</label>
                <div class="col-sm-8">
                    <input asp-for="CategoryName" class="form-control" placeholder="不可與現有類別重複" />
                </div>
            </div>
        </div>
        <div class="border-top">
            <div class="card-body">
                <button type="submit" class="btn btn-primary">新增確認</button>
            </div>
        </div>
    </form>
</div>
<script>
    $(document).ready(function () {
        $('#createPostCategoryForm').on('submit', function (e) {
            e.preventDefault(); // 阻止預設提交跳頁

            $.ajax({
                url: '@Url.Action("CreatePostCategory", "Home")',
                type: 'POST',
                data: $(this).serialize(),
                success: function (res) {
                    if (res.success) {
                        alert(res.message);
                        loadCategoriesPartial(); // 成功後重新載入列表
                    } else {
                        alert(res.message);
                    }
                },
            });
        });

        // 點擊「新增類別」按鈕 → 載入表單
        $(document).on('click', '.load-create-post-category', function (e) {
            e.preventDefault();

            $.get('@Url.Action("CreatePostCategory", "Home")', function (result) {
                $('#page-body-container').hide();
                $('#content-area').html(result).fadeIn();
            });
        });

    });
</script>




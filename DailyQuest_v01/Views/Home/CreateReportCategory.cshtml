@model DailyQuest_v01.Models.ReportCategory
@{
    Layout = "~/Views/Shared/SocialLayout.cshtml";
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h2 class="pb-2">新增類別</h2>
            <div class="ms-auto text-end">
            </div>
        </div>
    </div>
</div>

<div class="card">
    <form asp-action="CreateReportCategory" method="post">
        @Html.AntiForgeryToken()
        <div class="card-body">
            <h4 class="card-title">檢舉類別</h4>
            <div class="form-group row">
                <label for="lname" class="col-sm-3 text-end control-label col-form-label">檢舉類別名稱</label>
                <div class="col-sm-8">
                    <input asp-for="ReportCategoryName" class="form-control" placeholder="不可與現有名稱重複" />
                </div>
            </div>
            <div class="form-group row">
                <label for="lname" class="col-sm-3 text-end control-label col-form-label">檢舉類別說明</label>
                <div class="col-sm-8">
                    <input asp-for="Description" class="form-control" placeholder="針對檢舉類別做細項說明" />
                </div>
            </div>
        </div>
        <div class="border-top">
            <div class="card-body">
                <button type="submit" class="btn btn-primary">
                    新增確認
                </button>
            </div>
        </div>
    </form>
</div>


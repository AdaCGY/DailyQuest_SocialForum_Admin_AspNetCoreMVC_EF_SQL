@model DailyQuest_v01.Models.ReportCategory
@{
    Layout = "~/Views/Shared/SocialLayout.cshtml";
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h2 class="pb-2">編輯檢舉類別</h2>
            <div class="ms-auto text-end"></div>
        </div>
    </div>
</div>

<div class="card">
    <form asp-action="EditReportCategory" method="post">
        <div class="card-body">
            <input type="hidden" asp-for="ReportCategoryId" />

            <div class="form-group row">
                <label class="col-sm-3 text-end control-label col-form-label" asp-for="ReportCategoryName"></label>
                <div class="col-sm-8">
                    <input asp-for="ReportCategoryName" class="form-control" />
                    <span asp-validation-for="ReportCategoryName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 text-end control-label col-form-label" asp-for="Description"></label>
                <div class="col-sm-8">
                    <input asp-for="Description" class="form-control" />
                </div>
            </div>
        </div>
        <div class="border-top">
            <div class="card-body">
                <button type="submit" class="btn btn-primary">儲存</button>
                <a asp-action="Categories" class="btn btn-secondary">取消</a>
            </div>
        </div>
    </form>
</div>

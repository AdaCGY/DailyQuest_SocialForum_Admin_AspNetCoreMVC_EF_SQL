@model DailyQuest_v01.Models.ViewModels.SocialCategoriesManageViewModels
@{
    ViewData["Title"] = "Social_Manage";
}

<h1>Social_Manage</h1>
<div class="card">
    <div class="card-body">
        <h5 class="card-title">論壇文章貼文類別</h5>
        <div class="table-responsive">
            <table id="zero_config"
                   class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>類別ID</th>
                        <th>類別名稱</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.PostCategories)
                    {
                        <tr>
                            <td>@item.CategoryId</td>
                            <td>@item.CategoryName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h5 class="card-title">可檢舉類別</h5>
        <div class="table-responsive">
            <table id="zero_config"
                   class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>類別ID</th>
                        <th>類別名稱</th>
                        <th>類別說明</th>
                        <th>創建時間</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ReportCategories)
                    {
                        <tr>
                            <td>@item.ReportCategoryId</td>
                            <td>@item.ReportCategoryName</td>
                            <td>@item.Description</td>
                            <td>@item.CreatedAt</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
